<div class="flex-container">
	<div class="form-group">
		<select class="custom-select" id="category">
			<option selected value="Sandwiches">Sandwiches</option>
			<option value="Burgers">Burgers</option>
			<option value="Salads">Salads</option>
			<option value="Drinks">Drinks</option>
		</select>
	</div>
</div>


<div class="tabs-content menuItem-container" data-tabs-content="menu-tabs">

	<!-- Appetizers Menu -->
	<div class="tabs-panel is-active" data-menu-items="appetizers" id="menuAppetizers">
		<div class="flex-container ">
			{{#each items}}
			{{!-- {{#if_eq dataValues.category 'Sandwiches'}} --}}
